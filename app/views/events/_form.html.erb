<div class='row'>
  <div class='col-xs-12'>
    <%= form_with(model: @event, local: true, :html => { class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter your event name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :description, class: "form-control", placeholder: "Description of event" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :location %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :location, class: "form-control", placeholder: "Event location" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= f.label :date %>
        </div>
        <div class="col-sm-6">
          <%= f.datetime_select :date %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-5 col-xs-offset-5">
          <%= f.submit "Create event", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
