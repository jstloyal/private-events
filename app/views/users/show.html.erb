<h2 align='center'>Welcome to <%= @user.name %>'s page </h2>

<h4 align='center'><%= @user.name %>'s events </h4>
<% @created_events.each do |event| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to event.name, event_path(event) %>
        </div>
        <div class="article-body">
          <%= event.description %>
          <div class="article-meta-details">
            <small>Created by: <%= event.name if current_user %> | <p> Date: <%= event.date%></p><br> </small>
          </div>
        </div>
        <% if logged_in? && current_user == @created_events.user %>
          <div class="article-actions">
            <%= link_to 'Edit this event', edit_event_path(event), class: "btn btn-xs btn-primary" %>
            <%= link_to 'Delete this event', event_path(event), method: :delete, data: {confirm: "Are you sure you want to delete this event?"}, class: "btn btn-xs btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<h4 align='center'>Previous events</h4>
<% @past_events.each do |event|%>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to event.name, event_path(event) %>
        </div>
        <div class="article-body">
          <%= event.description %>
          <div class="article-meta-details">
            <small>Created by: <%= event.name if current_user %></small>
          </div>
        </div>
        <% if logged_in? && current_user == @user %>
          <div class="article-actions">
            <%= link_to 'Edit this event', edit_event_path(event), class: "btn btn-xs btn-primary" %>
            <%= link_to 'Delete this event', event_path(event), method: :delete, data: {confirm: "Are you sure you want to delete this event?"}, class: "btn btn-xs btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
