<h1 align='center'>Sign In</h1>
<p align='center'>Example user: Akanmu </p>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(:session, url: sessions_path, :html => { class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-4">
        <%= f.label :name, 'Name from first time you signed in' %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter your name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-5 col-xs-offset-5">
          <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
